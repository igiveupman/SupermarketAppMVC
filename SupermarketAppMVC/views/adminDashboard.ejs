<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Admin Dashboard</title>
</head>
<body>
  <div class="container mt-4">
    <h1>Admin Dashboard</h1>
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger"><%= errors.join(', ') %></div>
    <% } %>
    <% if (messages && messages.length) { %>
      <div class="alert alert-success"><%= messages.join(', ') %></div>
    <% } %>

    <h3>Products</h3>
    <ul>
      <% products.forEach(p => { %>
        <li><a href="/admin/products/<%= p.id %>"><%= p.productName %></a></li>
      <% }) %>
    </ul>

    <h3>Users</h3>
    <ul>
      <% users.forEach(u => { %>
        <li><%= u.username %> - <%= u.role %></li>
      <% }) %>
    </ul>

    <a href="/inventory" class="btn btn-secondary">Back to Inventory</a>
  </div>
</body>
</html>
