<% /* Cart page: lists session cart items, remove actions, and checkout */ %>
<%- include('partials/header', { user, pageTitle: 'Cart' }) %>
<h2 class="mb-4">Your Cart</h2>
<% if (cart.length === 0) { %>
  <div class="alert alert-info">Your cart is empty.</div>
  <a href="/shopping" class="btn btn-primary">Click here to Shop</a>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-clean align-middle">
      <thead>
        <tr>
          <th>Product</th>
          <th>Image</th>
          <th>Quantity</th>
          <th>Unit Price</th>
          <th>Line Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0; %>
        <% cart.forEach(item => { %>
          <tr>
            <td><%= item.productName %></td>
            <td style="width:110px"><img src="/images/<%= item.image %>" class="img-fluid rounded" alt="<%= item.productName %>"></td>
            <td>
              <form action="/cart/update/<%= item.productId %>" method="post" class="d-flex align-items-center">
                <input type="number" name="quantity" class="form-control form-control-sm" style="width:90px" min="1" value="<%= item.quantity %>" onchange="this.form.submit()">
              </form>
            </td>
            <td>
              <% if (item.discountApplied) { %>
                <span class="text-danger fw-semibold">$<%= Number(item.price).toFixed(2) %></span>
                <small class="text-muted text-decoration-line-through ms-1">$<%= Number(item.originalPrice).toFixed(2) %></small>
              <% } else { %>
                $<%= Number(item.price).toFixed(2) %>
              <% } %>
            </td>
            <td>$<%= (Number(item.price) * item.quantity).toFixed(2) %></td>
            <td><a href="/cart/remove/<%= item.productId %>" class="btn btn-sm btn-remove">Remove</a></td>
          </tr>
          <% total += item.price * item.quantity; %>
        <% }) %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap gap-2">
    <h4 class="mb-0">Total: $<%= total.toFixed(2) %></h4>
    <div>
  <a href="/purchase" class="btn btn-quick">Purchase</a>
      <a href="/shopping" class="btn btn-continue ms-2">Continue Shopping</a>
      <a href="/cart" class="btn btn-refresh ms-2">Refresh</a>
      <form action="/cart/clear" method="post" class="d-inline ms-2" onsubmit="return confirm('Clear all items from your cart?');">
        <button type="submit" class="btn btn-danger">Clear Cart</button>
      </form>
    </div>
  </div>
<% } %>
<%- include('partials/footer') %>
