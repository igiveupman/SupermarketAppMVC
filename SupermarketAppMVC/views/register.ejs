<% /* Registration page: creates a new user account (demo SHA1 hashing in SQL) */ %>
<%- include('partials/header', { pageTitle: 'Register', user, messages, errors }) %>
<section class="auth-wrapper">
  <div class="auth-panel shadow-sm">
    <div class="auth-header">
      <h1 class="auth-title">Create Account</h1>
      <p class="auth-sub">Join us and start shopping</p>
    </div>
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger mb-3">
        <% errors.forEach(function(msg){ %><div><%= msg %></div><% }) %>
      </div>
    <% } %>
    <form action="/register" method="POST" class="auth-form" novalidate>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="username" name="username" placeholder="Username" required value="<%= formData && formData.username ? formData.username : '' %>">
        <label for="username">Username</label>
      </div>
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required value="<%= formData && formData.email ? formData.email : '' %>">
        <label for="email">Email address</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" class="form-control" id="password" name="password" placeholder="Password" minlength="6" required>
        <label for="password">Password</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="address" name="address" placeholder="Address" required value="<%= formData && formData.address ? formData.address : '' %>">
        <label for="address">Address</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="contact" name="contact" placeholder="Contact Number" required value="<%= formData && formData.contact ? formData.contact : '' %>">
        <label for="contact">Contact Number</label>
      </div>
      <button type="submit" class="btn btn-primary w-100 mb-2">Register</button>
      <div class="auth-alt small">Already registered? <a href="/login">Login</a></div>
    </form>
  </div>
</section>
<%- include('partials/footer') %>
