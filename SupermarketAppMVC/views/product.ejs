<%- include('partials/header', { 
  user, 
  pageTitle: product ? product.productName : 'Product', 
  currentPage: 'shopping',
  messages: (typeof messages !== 'undefined' ? messages : []),
  errors: (typeof errors !== 'undefined' ? errors : [])
}) %>
<!-- product.ejs -->

<% /* Unified product detail layout using shared site styles */ %>
<% if (product) { %>
  <div class="product-detail">
    <div class="row g-4">
      <div class="col-md-5 text-center">
        <div class="product-image-wrapper shadow-sm p-3 bg-white rounded">
          <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="img-fluid" style="max-height:320px;object-fit:contain;">
        </div>
      </div>
      <div class="col-md-7">
        <div class="d-flex justify-content-between align-items-start mb-2">
          <span class="category-badge"><%= (product.category === 'Produce' || product.category === 'Fruits and Vegetables') ? 'Fruits & Veg' : (product.category || 'Uncategorized') %></span>
          <% if (user) { %>
            <a href="/favorites/toggle/<%= product.id %>" class="favorite-toggle" title="Toggle favourite">
              <span class="heart <%= product.favorited ? 'favorited' : '' %>"><%- product.favorited ? '&#10084;' : '&#9825;' %></span>
            </a>
          <% } %>
        </div>
        <h2 class="fw-semibold mb-1"><%= product.productName %></h2>
        <% 
          const avgRatingRaw = (reviewStats && reviewStats.averageRating) ? reviewStats.averageRating : 0;
          const avgRating = avgRatingRaw ? Number(avgRatingRaw).toFixed(1) : '0.0';
          const avgNum = Number(avgRating);
          const fullStars = Math.floor(avgNum);
          const halfStar = (avgNum - fullStars) >= 0.5;
          const emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
        %>
        <div class="d-flex align-items-center gap-2 mb-2">
          <% if (reviewStats && reviewStats.reviewCount) { %>
            <span class="avg-score"><%= avgRating %></span>
            <div class="star-row">
              <% for (let i = 0; i < fullStars; i++) { %><span class="star full">★</span><% } %>
              <% if (halfStar) { %><span class="star half">★</span><% } %>
              <% for (let i = 0; i < emptyStars; i++) { %><span class="star empty">★</span><% } %>
            </div>
            <span class="vr-line">|</span>
            <small class="text-muted"><%= reviewStats.reviewCount %> rating<%= reviewStats.reviewCount === 1 ? '' : 's' %></small>
          <% } else { %>
            <small class="text-muted">No ratings yet</small>
          <% } %>
        </div>
        <p class="text-muted mb-3 small">Product ID: <%= product.id %></p>
        <div class="price-tag mb-3">
          <% if (product.discount_price) { %>
            <span class="price-discount">$<%= Number(product.discount_price).toFixed(2) %></span>
            <span class="price-original ms-1">$<%= Number(product.price).toFixed(2) %></span>
          <% } else { %>
            $<%= Number(product.price).toFixed(2) %>
          <% } %>
          <% if (product.quantity <= 0) { %>
            <span class="badge bg-danger ms-2">Sold Out</span>
          <% } %>
        </div>
        <div class="stock mb-3">Stock: <%= product.quantity %> <span class="ms-2 <%= product.quantity > 0 ? 'text-success' : 'text-danger' %>"><%= product.quantity > 0 ? 'Available' : 'Out of stock' %></span></div>
        <% if (user && user.role === 'admin') { %>
          <a href="/updateProduct/<%= product.id %>" class="btn btn-outline-secondary btn-sm mb-3">Edit Product</a>
        <% } %>
        <% if (user && user.role !== 'admin') { %>
          <% if (product.quantity > 0) { %>
            <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-2 add-cart-form">
              <input type="hidden" name="returnTo" value="/product/<%= product.id %>">
              <label for="qty" class="form-label">Select quantity</label>
              <div class="input-group mb-3" style="max-width:220px;">
                <input type="number" name="quantity" id="qty" class="form-control" min="1" max="<%= product.quantity %>" value="1" required>
                <button class="btn btn-primary" type="submit">&#128722; Add</button>
              </div>
              <div id="qtyError" class="text-danger small" style="display:none;">Not enough stock.</div>
            </form>
          <% } else { %>
            <div class="alert alert-warning py-2 mb-3">Currently out of stock. Check back later.</div>
            <button class="btn btn-secondary" disabled>Not Available</button>
          <% } %>
        <% } %>
        <div class="mt-3">
          <% if (user && user.role === 'admin') { %>
            <a href="/inventory" class="btn btn-link">&larr; Back to Inventory</a>
          <% } else { %>
            <a href="/shopping" class="btn btn-link">&larr; Back to Shopping</a>
          <% } %>
        </div>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-lg-8">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <h5 class="mb-0">Reviews</h5>
                <small class="text-muted">
                  <% if (reviewStats && reviewStats.reviewCount) { %>
                    <%= reviewStats.reviewCount %> review<%= reviewStats.reviewCount === 1 ? '' : 's' %>
                  <% } else { %>
                    No reviews yet
                  <% } %>
                </small>
              </div>
              <% if (reviewStats && reviewStats.averageRating) { %>
                <div class="d-flex align-items-center gap-2">
                  <span class="avg-score"><%= avgRating %></span>
                  <div class="star-row">
                    <% for (let i = 0; i < fullStars; i++) { %><span class="star full">★</span><% } %>
                    <% if (halfStar) { %><span class="star half">★</span><% } %>
                    <% for (let i = 0; i < emptyStars; i++) { %><span class="star empty">★</span><% } %>
                  </div>
                  <span class="vr-line">|</span>
                  <small class="text-muted"><%= reviewStats.reviewCount %> rating<%= reviewStats.reviewCount === 1 ? '' : 's' %></small>
                </div>
              <% } %>
            </div>
            <% if (user) { %>
              <form action="/product/<%= product.id %>/review" method="POST" class="mt-3">
                <div class="row g-3 align-items-end">
                  <div class="col-sm-2">
                    <label class="form-label mb-1">Rating</label>
                    <select name="rating" class="form-select" required>
                      <% [5,4,3,2,1].forEach(r => { %>
                        <option value="<%= r %>" <%= userReview && userReview.rating === r ? 'selected' : '' %>><%= r %> / 5</option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-sm-10">
                    <label class="form-label mb-1">Title (optional)</label>
                    <input type="text" name="title" class="form-control" maxlength="100" value="<%= userReview && userReview.title ? userReview.title : '' %>">
                  </div>
                  <div class="col-12">
                    <label class="form-label mb-1">Comment (optional)</label>
                    <textarea name="comment" class="form-control" rows="3" maxlength="1000"><%= userReview && userReview.comment ? userReview.comment : '' %></textarea>
                  </div>
                  <div class="col-12 d-flex justify-content-between align-items-center">
                    <small class="text-muted">You can update your review anytime.</small>
                    <button type="submit" class="btn btn-primary btn-sm">Save review</button>
                  </div>
                </div>
              </form>
            <% } else { %>
              <p class="mt-3 text-muted">Log in to leave a review.</p>
            <% } %>

            <div class="mt-4">
              <% if (reviews && reviews.length) { %>
                <% reviews.forEach(r => { %>
                  <div class="border-bottom pb-3 mb-3">
                    <div class="d-flex justify-content-between">
                      <div>
                        <strong><%= r.username %></strong>
                        <div class="text-warning small"><%= '★'.repeat(r.rating) %><%= '☆'.repeat(5 - r.rating) %> (<%= r.rating %>/5)</div>
                      </div>
                      <small class="text-muted"><%= new Date(r.created_at).toLocaleDateString() %></small>
                    </div>
                    <% if (r.title) { %><div class="fw-semibold mt-1"><%= r.title %></div><% } %>
                    <% if (r.comment) { %><div class="text-muted mt-1"><%= r.comment %></div><% } %>
                  </div>
                <% }); %>
                <% if ((reviews || []).length === reviewPageSize) { %>
                  <a class="btn btn-outline-secondary btn-sm" href="/product/<%= product.id %>?reviewPage=<%= reviewPage + 1 %>">Next reviews</a>
                <% } %>
              <% } else { %>
                <p class="text-muted mb-0">No reviews yet. Be the first to review this product.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="alert alert-danger">No product found.</div>
<% } %>
<style>
  /* Reuse styling patterns from shopping page */
  .favorite-toggle { text-decoration:none; }
  .heart { font-size:1.7rem; color:#cbd5e1; transition:.2s; }
  .heart.favorited { color:#e11d48; }
  .heart:hover { transform:scale(1.15); color:#e11d48; }
  .category-badge { display:inline-block; padding:4px 10px; border-radius:20px; background:#0d6efd; color:#fff; font-size:.65rem; letter-spacing:.5px; text-transform:uppercase; }
  .price-original { text-decoration: line-through; color:#6b7280; }
  .price-discount { color:#dc2626; font-weight:600; }
  .product-detail { background:var(--surface-bg,#f8fafc); padding:1rem 0 2rem; }
  .product-image-wrapper { background:#fff; }
  #qtyError { margin-top:-0.5rem; }
  .avg-score { font-weight:700; color:#2563eb; }
  .vr-line { color:#cbd5e1; }
  .star-row .star { font-size:1rem; }
  .star.full { color:#f59e0b; }
  .star.half { color:#f59e0b; position:relative; }
  .star.half::after { content:'★'; color:#e5e7eb; position:absolute; left:0; width:50%; overflow:hidden; }
  .star.empty { color:#e5e7eb; }
</style>
<script>
  (function(){
    const qtyInput = document.getElementById('qty');
    if (!qtyInput) return; // No form when sold out
    const max = parseInt(qtyInput.getAttribute('max'),10) || 0;
    if (max === 0) return; // Sold out: skip validation wiring
    const err = document.getElementById('qtyError');
    qtyInput.addEventListener('input', function(){
      const val = parseInt(qtyInput.value,10) || 0;
      if (val > max){
        err.style.display='block';
      } else {
        err.style.display='none';
      }
    });
    const form = qtyInput.closest('form');
    form.addEventListener('submit', function(e){
      const val = parseInt(qtyInput.value,10) || 0;
      if (val > max){
        e.preventDefault();
        err.style.display='block';
        alert('Not enough stock. Available: ' + max);
      }
    });
  })();
</script>
<%- include('partials/footer') %>
