<%- include('partials/header', { 
  user, 
  pageTitle: product ? product.productName : 'Product', 
  messages: (typeof messages !== 'undefined' ? messages : []), 
  errors: (typeof errors !== 'undefined' ? errors : []) 
}) %>
<!-- product.ejs -->

<% /* Unified product detail layout using shared site styles */ %>
<% if (product) { %>
  <div class="product-detail">
    <div class="row g-4">
      <div class="col-md-5 text-center">
        <div class="product-image-wrapper shadow-sm p-3 bg-white rounded">
          <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="img-fluid" style="max-height:320px;object-fit:contain;">
        </div>
      </div>
      <div class="col-md-7">
        <div class="d-flex justify-content-between align-items-start mb-2">
          <span class="category-badge"><%= (product.category === 'Produce' || product.category === 'Fruits and Vegetables') ? 'Fruits & Veg' : (product.category || 'Uncategorized') %></span>
          <% if (user) { %>
            <a href="/favorites/toggle/<%= product.id %>" class="favorite-toggle" title="Toggle favourite">
              <span class="heart <%= product.favorited ? 'favorited' : '' %>">‚ù§</span>
            </a>
          <% } %>
        </div>
        <h2 class="fw-semibold mb-1"><%= product.productName %></h2>
        <p class="text-muted mb-3 small">Product ID: <%= product.id %></p>
        <div class="price-tag mb-3">
          <% if (product.discount_price) { %>
            <span class="price-discount">$<%= Number(product.discount_price).toFixed(2) %></span>
            <span class="price-original ms-1">$<%= Number(product.price).toFixed(2) %></span>
          <% } else { %>
            $<%= Number(product.price).toFixed(2) %>
          <% } %>
          <% if (product.quantity <= 0) { %>
            <span class="badge bg-danger ms-2">Sold Out</span>
          <% } %>
        </div>
        <div class="stock mb-3">Stock: <%= product.quantity %> <span class="ms-2 <%= product.quantity > 0 ? 'text-success' : 'text-danger' %>"><%= product.quantity > 0 ? 'Available' : 'Out of stock' %></span></div>
        <% if (user && user.role === 'admin') { %>
          <a href="/updateProduct/<%= product.id %>" class="btn btn-outline-secondary btn-sm mb-3">Edit Product</a>
        <% } %>
        <% if (user && user.role !== 'admin') { %>
          <% if (product.quantity > 0) { %>
            <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-2 add-cart-form">
              <input type="hidden" name="returnTo" value="/product/<%= product.id %>">
              <label for="qty" class="form-label">Select quantity</label>
              <div class="input-group mb-3" style="max-width:220px;">
                <input type="number" name="quantity" id="qty" class="form-control" min="1" max="<%= product.quantity %>" value="1" required>
                <button class="btn btn-primary" type="submit">üõí Add</button>
              </div>
              <div id="qtyError" class="text-danger small" style="display:none;">Not enough stock.</div>
            </form>
          <% } else { %>
            <div class="alert alert-warning py-2 mb-3">Currently out of stock. Check back later.</div>
            <button class="btn btn-secondary" disabled>Not Available</button>
          <% } %>
        <% } %>
        <div class="mt-3">
          <% if (user && user.role === 'admin') { %>
            <a href="/inventory" class="btn btn-link">‚Üê Back to Inventory</a>
          <% } else { %>
            <a href="/shopping" class="btn btn-link">‚Üê Back to Shopping</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="alert alert-danger">No product found.</div>
<% } %>
<style>
  /* Reuse styling patterns from shopping page */
  .favorite-toggle { text-decoration:none; }
  .heart { font-size:1.7rem; color:#94a3b8; transition:.2s; }
  .heart.favorited { color:#e11d48; }
  .heart:hover { transform:scale(1.15); color:#e11d48; }
  .category-badge { display:inline-block; padding:4px 10px; border-radius:20px; background:#0d6efd; color:#fff; font-size:.65rem; letter-spacing:.5px; text-transform:uppercase; }
  .price-original { text-decoration: line-through; color:#6b7280; }
  .price-discount { color:#dc2626; font-weight:600; }
  .product-detail { background:var(--surface-bg,#f8fafc); padding:1rem 0 2rem; }
  .product-image-wrapper { background:#fff; }
  #qtyError { margin-top:-0.5rem; }
</style>
<script>
  (function(){
    const qtyInput = document.getElementById('qty');
    if (!qtyInput) return; // No form when sold out
    const max = parseInt(qtyInput.getAttribute('max'),10) || 0;
    if (max === 0) return; // Sold out: skip validation wiring
    const err = document.getElementById('qtyError');
    qtyInput.addEventListener('input', function(){
      const val = parseInt(qtyInput.value,10) || 0;
      if (val > max){
        err.style.display='block';
      } else {
        err.style.display='none';
      }
    });
    const form = qtyInput.closest('form');
    form.addEventListener('submit', function(e){
      const val = parseInt(qtyInput.value,10) || 0;
      if (val > max){
        e.preventDefault();
        err.style.display='block';
        alert('Not enough stock. Available: ' + max);
      }
    });
  })();
</script>
<%- include('partials/footer') %>
