<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container mt-4">
    <h2>Review Your Order</h2>
    <% if (cart.length === 0) { %>
      <div class="alert alert-info">Your cart is empty. <a href="/shopping">Go shopping</a>.</div>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Unit Price</th>
            <th>Line Total</th>
          </tr>
        </thead>
        <tbody>
        <% let total = 0; %>
        <% cart.forEach(item => { %>
          <tr>
            <td><%= item.productName %></td>
            <td><%= item.quantity %></td>
            <td>$<%= item.price.toFixed(2) %></td>
            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
          </tr>
          <% total += item.price * item.quantity; %>
        <% }); %>
        </tbody>
      </table>
      <h4 class="mt-3">Grand Total: $<%= total.toFixed(2) %></h4>
      <form action="/cart/checkout" method="POST" class="mt-3">
        <button type="submit" class="btn btn-success">Place Order</button>
        <a href="/cart" class="btn btn-secondary ms-2">Back to Cart</a>
      </form>
    <% } %>
  </div>
</body>
</html>