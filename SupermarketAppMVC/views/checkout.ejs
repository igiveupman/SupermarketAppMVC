<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container mt-4">
    <h2>Review Your Order</h2>
    <% if (errors && errors.length) { %><div class="alert alert-danger"><%= errors.join(', ') %></div><% } %>
    <% if (messages && messages.length) { %><div class="alert alert-success"><%= messages.join(', ') %></div><% } %>
    <% if (cart.length === 0) { %>
      <div class="alert alert-info">Your cart is empty. <a href="/shopping">Go shopping</a>.</div>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Unit Price</th>
            <th>Line Total</th>
          </tr>
        </thead>
        <tbody>
        <% let subtotalDisplay = 0; %>
        <% cart.forEach(item => { %>
          <tr>
            <td><%= item.productName %></td>
            <td><%= item.quantity %></td>
            <td>$<%= item.price.toFixed(2) %></td>
            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
          </tr>
          <% subtotalDisplay += item.price * item.quantity; %>
        <% }); %>
        </tbody>
      </table>
      <form action="/checkout" method="POST" class="row g-4 mt-3">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header fw-semibold">Delivery Method</div>
            <div class="card-body">
              <% deliveryMethods.forEach(m => { %>
                <div class="form-check mb-2">
                  <input class="form-check-input" type="radio" name="delivery_method" id="dm-<%= m.id %>" value="<%= m.id %>" <%= selectedMethod === m.id ? 'checked' : '' %>>
                  <label class="form-check-label" for="dm-<%= m.id %>"><%= m.label %> - $<%= m.fee.toFixed(2) %></label>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header fw-semibold">Delivery Address</div>
            <div class="card-body">
              <textarea name="delivery_address" class="form-control" rows="5" placeholder="Enter delivery address"><%= user && user.address ? user.address : '' %></textarea>
            </div>
          </div>
        </div>
        <div class="col-12">
          <div class="card mt-2">
            <div class="card-body d-flex flex-wrap justify-content-between align-items-center gap-2">
              <div>
                <div>Subtotal: $<%= subtotal.toFixed(2) %></div>
                <div id="deliveryFeeLine">Delivery Fee (selected): shows after submit</div>
                <div class="fw-semibold">Total (calculated after submit)</div>
              </div>
              <div>
                <button type="submit" class="btn btn-success">Place Order</button>
                <a href="/cart" class="btn btn-outline-secondary ms-2">Back to Cart</a>
              </div>
            </div>
          </div>
        </div>
      </form>
    <% } %>
  </div>
</body>
</html>